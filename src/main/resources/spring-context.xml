<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id = "questionsDao" class = "ru.spring.dao.QuestionsDaoSimple">
            <constructor-arg name = "filePath" value = "/questions.csv"/>
    </bean>

    <bean id = "questionsService" class = "ru.spring.service.QuestionsServiceImpl">
        <constructor-arg name = "dao" ref="questionsDao"/>
    </bean>

</beans>